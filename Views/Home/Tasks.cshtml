@model List<TaskModel>
@{
    ViewData["Hellotext"] = "Hello text";
}


<table class="table">
    <thead>
        <tr>
            <td scope="col">Id</td><td scope="col">Name</dt><td scope="col">Desc</td>
        </tr>
    </thead>

    <tbody>
        @{
            if (Model == null)
            {
                <p>NULL MODEL</p>
            } 
            else
            {
                foreach (TaskModel? task in Model)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Name</td>
                        <td>@task.Description</td>
                    </tr>
                }
            }
        }

    </tbody>

</table>